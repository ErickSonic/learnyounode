<h1 class="text-center mb-3">{{title}}</h1>
<form action="/api/whats" method="POST" class=" mb-4">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" class="form-control">
    </div>
    <div class="form-group">
        <label for="developer">Phone</label>
        <input type="developer" name="developer" class="form-control">
    </div>
    <div class="form-group">
        <label for="year">Date</label>
        <input type="year" name="year" class="form-control">
    </div>
    <input type="submit" value="Add Videogame" class="btn btn-primary btn-block">

</form>


<h4>Whatsapp</h4>
<ul class="list-group">
    {{#each whats}}
    <li class="list-group-item">
        <p class="">Name: {{this.name}}</p>
        <p class="">Phone: {{this.phone}}</p>
        <p class="">Date: {{this.date}}</p>
    </li>
    {{/each}}
</ul>