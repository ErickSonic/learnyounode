<h1 class="text-center mb-3">{{title}}</h1>
<form action="/api/videogames" method="POST" class=" mb-4">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" class="form-control">
    </div>
    <div class="form-group">
        <label for="developer">Developer</label>
        <input type="developer" name="developer" class="form-control">
    </div>
    <div class="form-group">
        <label for="year">Year</label>
        <input type="year" name="year" class="form-control">
    </div>
    <input type="submit" value="Add Videogame" class="btn btn-primary btn-block">
</form>


<h4>Videogames</h4>
<ul class="list-group">
    {{#each videogames}}
    <li class="list-group-item">
        <p class="">Name: {{this.name}}</p>
        <p class="">Developer: {{this.developer}}</p>
        <p class="">Year: {{this.year}}</p>
    </li>
    {{/each}}
</ul>